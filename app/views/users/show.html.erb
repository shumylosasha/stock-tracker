<h1>User details</h1>

<% if @user %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
         <tr>
           <td><strong>Name: </strong> <%= @user.full_name %></td>
           <td><strong>Email: </strong> <%= @user.email %></td>
           <td>
             <% if current_user.not_friend_with?(@user.id) %>
               <%= link_to 'Follow', friendships_path(friend: @user), class: "btn btn-sm btn-success ml-2", method: :post %></td>
             <% else %>
               <span class="badge badge-secondary ml-2">You are friends</span>
             <% end %>
         </tr>
       </tbody>
     </table>
  </div>
<% end %>

<% if !@tracked_stocks.empty? %>
    <%= render "stocks/list" %>
  <% else %>
    <p class="lead">This user is not tracking any stocks</p>
<% end %>
