<h1>My portfolio</h1>

<div class="search-stocks">
  <h3>Search Stocks</h3>

  <%= form_tag search_stock_path, method: :get, remote: true do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :stock, params[:stock], placeholder:"Enter stock ticker symbol (ex. AAPL, GOOG, MSFT)", autofocus:true, class:"form-control form-control-lg" %>
    </div>

    <div class="col-sm-3">
      <%= button_tag type: :submit, class:"btn btn-success" do %>
        <%= fa_icon "search 2x" %>
      <% end %>
    </div>
  </div>
  <% end %>

 </div>
<div id="stock-results">

</div>

<% if !@tracked_stocks.empty? %>
  <%= render "stocks/list" %>
<% end %>
